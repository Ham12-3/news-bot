# Application
APP_NAME="News Intelligence Platform"
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/newsbot
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI/ML APIs
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Reddit API (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=NewsBot/0.1

# Ingestion
INGESTION_INTERVAL_MINUTES=30
MAX_ITEMS_PER_SOURCE=100

# Cost controls
MAX_EMBEDDINGS_PER_HOUR=1000
MAX_LLM_CALLS_PER_USER_DAY=50

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=10080
